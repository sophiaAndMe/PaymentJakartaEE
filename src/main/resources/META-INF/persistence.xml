<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="EntityP" transaction-type="JTA">

        <class>ec.edu.uce.laverdejhon_paymentjakarta.entity.Customer</class>
        <class>ec.edu.uce.laverdejhon_paymentjakarta.entity.OrderPayment</class>
        <class>ec.edu.uce.laverdejhon_paymentjakarta.entity.Product</class>
        <class>ec.edu.uce.laverdejhon_paymentjakarta.entity.OrderProduct</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/paymentdb?serverTimezone=UTC" />

            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true"/>

            <property name="hibernate.default_schema" value="paymentdb" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />


            <property name="hibernate.connection.pool_size" value="1"/>

            <!-- ESTA NO VALE CREO-->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />

        </properties>
    </persistence-unit>
</persistence>
